{
  "name": "node-typescript-debug-example",
  "version": "1.0.0",
  "description": "example of how to debug typescript node projects",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",    
    "dev": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nodemon --config nodemon.json",    
    "docker.build": "docker build --no-cache -t node-typescript-debug-example:v1 .",
    "docker.build.v2": "docker build --no-cache -t node-typescript-debug-example:v2 .",
    "docker.dev": "nodemon --inspect=0.0.0.0:9230 --nolazy dist/index.js",
    "docker.debug": "concurrently -k \"npm run watch\" \"docker-compose up --build\"",
    "docker.launch": "docker run -it -p 8080:80 node-typescript-debug-example:v1",
    "kube.deploy": "kubectl apply -f deployment.yaml",
    "kube.service": "kubectl apply -f service.yaml",
    "kube.launch": "minikube service node-typescript-debug-example-service",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "precommit": "lint-staged",
    "start": "NODE_ENV=production node dist/index.js",    
    "test": "jest",
    "watch": "tsc -w"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "lint-staged": {
    "{src}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "morgan": "^1.9.1",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "23.3.11",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "@types/prettier": "^1.15.2",
    "@types/rimraf": "^2.0.2",
    "@types/source-map-support": "^0.4.1",
    "concurrently": "4.1.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "**/*.spec.(ts|tsx)"
    ]
  }
}