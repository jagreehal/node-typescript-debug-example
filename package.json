{
  "name": "node-typescript-debug-example",
  "version": "1.0.0",
  "description": "example of how to debug typescript node projects",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "npm run build && concurrently -k \"npm run watch\" \"npm run nodemon\"",
    "nodemon": "nodemon --inspect=0.0.0.0:9230  --watch dist --ignore **/*.spec.js",
    "precommit": "lint-staged",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "docker-debug": "concurrently -k \"npm run watch\" \"docker-compose up --build\"",
    "test": "jest",
    "watch": "tsc -w"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "lint-staged": {
    "{src}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "morgan": "^1.9.0",
    "source-map-support": "^0.5.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/helmet": "^0.0.38",
    "@types/jest": "22.2.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.0.3",
    "@types/prettier": "^1.12.0",
    "@types/rimraf": "^2.0.2",
    "@types/source-map-support": "^0.4.0",
    "concurrently": "3.6.0",
    "cross-env": "^5.1.4",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "ts-jest": "22.4.4",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "**/*.spec.(ts|tsx)"
    ]
  }
}
