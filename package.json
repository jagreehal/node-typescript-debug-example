{
  "name": "node-typescript-debug-example",
  "version": "1.0.0",
  "description": "example of how to debug typescript node projects",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nodemon --config nodemon.json",
    "dev:docker": "nodemon --inspect=0.0.0.0:9230 --nolazy dist/index.js",
    "precommit": "lint-staged",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "docker-debug": "concurrently -k \"npm run watch\" \"docker-compose up --build\"",
    "test": "jest",
    "watch": "tsc -w"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "lint-staged": {
    "{src}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "morgan": "^1.9.1",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "23.3.10",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.11",
    "@types/prettier": "^1.15.2",
    "@types/rimraf": "^2.0.2",
    "@types/source-map-support": "^0.4.1",
    "concurrently": "4.1.0",
    "cross-env": "^5.2.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "24.0.0",
    "ts-node": "7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "**/*.spec.(ts|tsx)"
    ]
  }
}